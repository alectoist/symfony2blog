{% extends 'CoreBundle::layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/admin/css/main.css') }}">
{% endblock %}

{% block body %}
    <header>
    	<p>Symfony2 Blog - Admin</p>
    	<nav>
    		<ul>
    			<li>
    				<a href="#">Posts</a>
    			</li>
    			<li>
    				<a href="{{ path('blog_admin_author_index') }}">Authors</a>
    			</li>
    		</ul>
    	</nav>
    </header>

    <section>
		{% for type, messages in app.session.flashbag.all() %}
		    {% for message in messages %}
		        <p class="alert alert-success">{{ message }}</p>
		    {% endfor %}
		{% endfor %}

		{% block section %}{% endblock %}
    </section>
{% endblock %}