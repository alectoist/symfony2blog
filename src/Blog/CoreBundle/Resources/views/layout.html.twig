{% extends '::base.html.twig' %}

{% block stylesheets %}
	<link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">	
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/core/css/style.css') }}">
{% endblock %}

{% block body %}

	<header>
		<p>Symfony2 Blog</p>
		<nav>
			<ul>
				<li><a href="#">{{ 'home' | trans }}</a></li>
			</ul>
		</nav>
	</header>
    
	{% block sidebar %}{% endblock %}

	<section>
		{% block section %}{% endblock %}
	</section>

	<footer>
		<p>&copy; {{ 'now' | date('Y') }} Symfony2 Blog</p>
	</footer>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.js') }}"></script>
    
    <script src="{{ asset('js/bootstrap.js') }}"></script>
{% endblock %}